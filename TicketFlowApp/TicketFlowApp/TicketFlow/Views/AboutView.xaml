<UserControl x:Class="TicketFlow.Views.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TicketFlow.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Transparent">
    
    <UserControl.Resources>
        <DropShadowEffect x:Key="Shadow" Color="Black" Direction="997" ShadowDepth="5" BlurRadius="9" Opacity="9"/>
    </UserControl.Resources>
    
    <Grid >
        <Border CornerRadius="12" Effect="{StaticResource Shadow}">

            <!--background image-->
            <Border.Background>
                <ImageBrush ImageSource="/Images/UserPic.png"
                        Stretch="UniformToFill"/>
            </Border.Background>

            <!--main background-->
            <Border CornerRadius="12"
            BorderThickness="2"
            Opacity="0.77">
                
                <!--border style-->
                <Border.BorderBrush>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="WhiteSmoke" Offset="0"/>
                        <GradientStop Color="{StaticResource winBorderColor3}" Offset="0.24"/>
                        <GradientStop Color="{StaticResource winBorderColor3}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>

                <!--background style-->
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,1" EndPoint="1,2">
                        <GradientStop Color="{StaticResource primaryBackcolor2}" Offset="0.1"/>
                        <GradientStop Color="{StaticResource winBorderColor3}" Offset="1.0"/>
                    </LinearGradientBrush>
                </Border.Background>

                <StackPanel Margin="20,100,0,0"
                    Effect="{StaticResource Shadow}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <TextBlock
                    Margin="10"
                    Foreground="White"
                    FontSize="22">                       
                    Version 1.0.0.1
                    </TextBlock>
                    <TextBlock
                        Margin="2"
                    Foreground="WhiteSmoke"
                    FontSize="12"
                    HorizontalAlignment="Center">
                        made by
                    </TextBlock>
                    <TextBlock
                        Margin="15"
                        HorizontalAlignment="Center"
                    Foreground="White"
                    FontSize="22">
                        G.S
                    </TextBlock>
                    <TextBlock
                        HorizontalAlignment="Center"
                    Foreground="WhiteSmoke"
                    FontSize="12">
                        September 2023
                    </TextBlock>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</UserControl>
